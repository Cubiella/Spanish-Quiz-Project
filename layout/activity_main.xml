<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gaudifaded"
                android:scaleType="centerCrop"
                android:id="@+id/gaudiImage"
                tools:ignore="contentDescription"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@id/gaudiImage"
                android:gravity="center"
                android:text="@string/how_much_do_you"
                android:textSize="40sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:typeface="serif"
                android:id="@+id/how_much_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/gaudiImage"
                android:layout_alignEnd="@id/gaudiImage"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/spain"
                android:textSize="70sp"
                android:textColor="#424242"
                android:textStyle="bold"
                android:typeface="serif"
                android:id="@+id/text_Spain"
                android:layout_below="@id/how_much_text"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/how_much_do_you"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_things"
                android:textSize="18sp"
                android:padding="8dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/name"
                android:id="@+id/nameField"
                android:textSize="18sp"
                android:paddingBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ECEFF1"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/where_is_Spain"
                android:textStyle="italic"
                android:layout_weight="1"
                android:textSize="18sp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="8dp">
                <RadioButton android:id="@+id/europe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/europe"
                    android:textSize="14sp"
                    android:onClick="onWhereIsSpainClicked"/>
                <RadioButton android:id="@+id/south_america"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/southamerica"
                    android:textSize="14sp"
                    android:onClick="onWhereIsSpainClicked"/>
                <RadioButton android:id="@+id/who_knows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/china"
                    android:textSize="14sp"
                    android:onClick="onWhereIsSpainClicked"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spanish_speakers"
                android:textStyle="italic"
                android:textSize="18sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:layout_weight="1"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingRight="8dp"
                android:paddingBottom="16dp">
                <RadioButton android:id="@+id/wrongAnswer_Spanish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one_o_five"
                    android:textSize="14sp"
                    android:onClick="onpeopleSpeakingSpanish"/>
                <RadioButton android:id="@+id/rightAnswer_Spanish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/four_o_six"
                    android:textSize="14sp"
                    android:onClick="onpeopleSpeakingSpanish"/>
                <RadioButton android:id="@+id/stupidAnswer_Spanish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_language"
                    android:textSize="14sp"
                    android:onClick="onpeopleSpeakingSpanish"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ECEFF1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spain_produces"
                android:textStyle="italic"
                android:textSize="18sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:layout_weight="1"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingRight="8dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">
                <RadioButton android:id="@+id/wrongAnswer_oil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/produces_seventy"
                    android:textSize="14sp"
                    android:onClick="onoliveoil"/>
                <RadioButton android:id="@+id/rightAnswer_oil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/produces_half"
                    android:textSize="14sp"
                    android:onClick="onoliveoil"/>
                <RadioButton android:id="@+id/stupidAnswer_oil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/produces_none"
                    android:textSize="14sp"
                    android:onClick="onoliveoil"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/best_wines"
                android:textStyle="italic"
                android:textSize="18sp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingLeft="8dp"
                android:layout_weight="1"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="8dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:layout_weight="1">
                <RadioButton android:id="@+id/rigthAnswer_Wine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prefer_beer"
                    android:textSize="14sp"
                    android:onClick="onWine"/>
                <RadioButton android:id="@+id/wrongAnswer_Wine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prefer_wine"
                    android:textSize="14sp"
                    android:onClick="onWine"/>
                <RadioButton android:id="@+id/stupidAnswer_Wine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/not_alcohol"
                    android:textSize="14sp"
                    android:onClick="onWine"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ECEFF1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/love_the_most"
                android:textStyle="italic"
                android:textSize="18sp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingLeft="8dp"
                android:layout_weight="1"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_weight="1">
                <RadioButton android:id="@+id/wrongAnswer_tourists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/good_weather"
                    android:textSize="14sp"
                    android:onClick="onTourists"/>
                <RadioButton android:id="@+id/stupidAnswer_tourists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fine_scotch"
                    android:textSize="14sp"
                    android:onClick="onTourists"/>
                <RadioButton android:id="@+id/rigthAnswer_tourists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/love_everything"
                    android:textSize="14sp"
                    android:onClick="onTourists"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/amount_tourists"
                android:textStyle="italic"
                android:layout_weight="1"
                android:textSize="18sp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="8dp">
                <RadioButton android:id="@+id/rightAnswer_amountTourists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/third_most_popular"
                    android:textSize="14sp"
                    android:onClick="onMostPopular"/>
                <RadioButton android:id="@+id/wrongAnswer_amountTourists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_most_popular"
                    android:textSize="14sp"
                    android:onClick="onMostPopular"/>
                <RadioButton android:id="@+id/stupidAnswer_amountTourists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_tourists"
                    android:textSize="14sp"
                    android:onClick="onMostPopular"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ECEFF1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more_info"
                android:textStyle="italic"
                android:textSize="18sp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingLeft="8dp"
                android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="@string/general_info"
                        android:layout_weight="1"
                        android:id="@+id/general_info"
                        android:textSize="14sp"
                        android:onClick="moreInfoChecked"/>                        />
                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/gastronomy"
                        android:id="@+id/info_gastronomy"
                        android:textSize="14sp"
                        android:onClick="moreInfoChecked"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result"
                android:onClick="createResult"
                android:layout_margin="30dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
